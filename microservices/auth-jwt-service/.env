# /microservices\service-jwt\.env
# JWT Service Environment Variables
# Principle of least privilege - only JWT-related variables

# Database connection (read-only access to users table)
DATABASE_URL=postgresql://predictHealth_user:password@postgres:5432/predicthealth_db

# Redis for token storage and session management
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET_KEY=UDEM
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8003
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://localhost:5000,http://localhost:3000
